<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <a class="navbar-brand" href="/register"></a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register</a>
      </div>
      <% if (!username) {%>
        <form method="POST" style="margin-left: auto; margin-top: 10px" action="/login">
          <input type="text" placeholder="Enter Username" name="username" required>
          <!-- <label for="password">Password: </label>
            <input type="text" placeholder="Enter Password" name="password" required> -->
            <button type="submit" class="btn btn-outline-dark">Login</button>
          </form>
            <% } else { %>
              <p style="margin-left: 325px; margin-top: 15px">Welcome: <%=username%> </p>
          <form method="POST" style ="margin-left: auto" action="/logout">
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
          <% } %>
    </div>
  </nav>
</header>